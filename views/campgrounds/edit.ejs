<% layout('layouts/boilerplate') -%>

    <h1>Edit a CampGround</h1>
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post">
        <label for="">TITLE:</label>
        <input type="text" name="campground[title]" value="<%= camp.title %>">
        <br>
        <label for="">LOCATION:</label>
        <input type="text" name="campground[location]" value="<%= camp.location %>">
        <br>
        <button>submit</button>
    </form>
    <a href="/campgrounds">All camps</a>
